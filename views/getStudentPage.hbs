<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Students List</title>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4; /* Light gray background color */
            color: #333; /* Dark text color */
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        form {
            width: 80%;
            max-width: 600px;
            background-color: #fff; /* White background color */
            color: #333; /* Dark text color */
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Light shadow */
            border-radius: 8px;
        }

        h2 {
            font-size: 24px;
            color: #007bff; /* Blue text color */
            margin-bottom: 20px;
        }

        button {
            height: 40px;
            width: 100%;
            font-size: 18px;
            margin-top: 10px;
            border-radius: 5px;
            outline: none;
            border: none;
            box-shadow: 2px 2px 3px #777; /* Gray shadow */
            transition: all 0.2s linear;
            cursor: pointer;
            background-color: #28a745; /* Green button color */
            color: #fff; /* White text color */
        }

        button:hover {
            background-color: #218838; /* Darker green on hover */
        }

        table {
            width: 100%;
            margin-top: 20px;
            border-collapse: collapse;
        }

        table, th, td {
            border: 1px solid #ddd; /* Light gray border */
        }

        th, td {
            padding: 12px;
            text-align: left;
        }

        th {
            background-color: #007bff; /* Blue background color */
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9; /* Lighter gray background color for even rows */
        }
    </style>
</head>
<body>
    <form action="" id="form1">
        <h2>Students List</h2>
        <button type="submit" class="getAll-btn">Get Students</button>
        <table class="form1-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Roll Number</th>
                    <th>Email</th>
                </tr>
            </thead>
            <!-- Add your table content here -->
        </table>
    </form>
    <script>


        // submit button form 1
        let btn1 = document.querySelector(".getAll-btn");

        // FORM 1:
        let table1 = document.querySelector(".form1-table");

        btn1.addEventListener('click' , async(event)=>{
            event.preventDefault() ;

            try{
                let response = await axios.get(`http://localhost:3000/students`);
                console.log(response.data) ;
                let data = response.data ;          // contains the array of students info

                table1.innerHTML = `<thead>
                    <tr>
                        <td>Name</td>
                        <td>Roll Number</td>
                        <td>Email</td>
                    </tr>
                </thead>` ;

                data.map((stu) => {
                    let tr = document.createElement('tr') ;
                    let td1 = document.createElement('td') ;
                    let td2 = document.createElement('td') ;
                    let td3 = document.createElement('td') ;

                    td1.textContent = stu.name ;
                    td2.textContent = stu.rollno;
                    td3.textContent = stu.email ;

                    tr.appendChild(td1) ;
                    tr.appendChild(td2) ;
                    tr.appendChild(td3) ;

                    table1.appendChild(tr) ;
                })
                

            }
            catch(err){
                console.log("Error aaya hai!!") ;
            }

        })

    </script>
</body>
</html>
